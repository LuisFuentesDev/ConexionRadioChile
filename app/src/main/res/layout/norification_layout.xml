<?xml version="1.0" encoding="utf-8"?>
<!-- notification_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Reproduciendo Radio"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notification_text"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Nombre de la canción o información adicional" />

    <!-- Agregar botones de pausa y detener aquí -->

    <ImageButton
        android:id="@+id/notification_pause_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:src="@drawable/baseline_pause_24" />

    <ImageButton
        android:id="@+id/notification_stop_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:src="@drawable/baseline_stop_24" />

</LinearLayout>
